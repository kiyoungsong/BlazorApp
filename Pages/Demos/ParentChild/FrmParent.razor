@page "/Demos/ParentChild/FrmParent" 
@inject IJSRuntime js;

<h3>FrmParent</h3>
<input type="button" value="서버에서 호출" @onclick="ParentCall" />
<hr />

<FrmChild FromParent="1024" OnParentCall="ParentCall"
          PageIndexChanged="PageIndexChanged"
          ></FrmChild>



@code {

    void ParentCall()
    {
        js.InvokeAsync<object>("alert", "부모 호출됨");
    }

    void PageIndexChanged(int pageIndex)
    {
        js.InvokeAsync<object>("alert", $"{pageIndex} 넘어옴");
    }
}
